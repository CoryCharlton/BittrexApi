<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/content_vertical_margin"
        android:paddingBottom="@dimen/content_vertical_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/currencylong_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:lines="1"
                android:maxLines="1"
                tools:text="Bitcoin"
                style="@style/TextAppearance.AppCompat.Subhead"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/currency_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:lines="1"
                android:maxLines="1"
                tools:text="BTC"
                style="@style/TextAppearance.AppCompat.Subhead"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/minconfirmation_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:lines="1"
                android:maxLines="1"
                tools:text="6"
                style="@style/TextAppearance.AppCompat.Caption"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txfee_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:lines="1"
                android:maxLines="1"
                tools:text="0.00000001"
                style="@style/TextAppearance.AppCompat.Caption"
                />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/Divider" />

</LinearLayout>